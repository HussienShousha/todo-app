<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Todos Dashboard</title>
  <link rel="stylesheet" href="../Static/style.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"/>
</head>
<body>
  <h2>Todos Dashboard</h2>

  <form id="todoForm">
    <input type="text" name="title" placeholder="Todo title" required />
    <input type="text" name="description" placeholder="Description" />
    <button type="submit">Add Todo</button>
  </form>

  <table class="table">
    <thead>
      <tr><th>#</th><th>Title</th><th>Description</th><th>Actions</th></tr>
    </thead>
    <tbody id="todosList">
      <% todos.forEach((todo, i) => { %>
        <tr data-id="<%= todo._id %>">
          <td><%= i+1 %></td>
          <td><%= todo.title %></td>
          <td><%= todo.description %></td>
          <td>
            <button class="deleteBtn">Delete</button>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <script>
    const token = localStorage.getItem('token'); 

    const form = document.getElementById('todoForm');
    const todosList = document.getElementById('todosList');

    
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());

      const res = await fetch('/todos', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': 'Bearer ' + token
        },
        body: JSON.stringify(data)
      });

      const result = await res.json();
      if(res.ok) location.reload(); 
      else alert(result.message);
    });

    todosList.addEventListener('click', async (e) => {
      if(e.target.classList.contains('deleteBtn')){
        const tr = e.target.closest('tr');
        const id = tr.dataset.id;

        const res = await fetch('/todos/' + id, {
          method: 'DELETE',
          headers: { 'Authorization': 'Bearer ' + token }
        });

        if(res.ok) tr.remove();
        else {
          const result = await res.json();
          alert(result.message);
        }
      }
    });
  </script>
</body>
</html>
