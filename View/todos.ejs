<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Todos Dashboard</title>
  <link rel="stylesheet" href="../Static/style.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"/>
</head>
<body>
  <div class="container mt-4">
    <h2 class="mb-4 text-center">Todos Dashboard</h2>

    <!-- Add Todo Form -->
    <form id="todoForm" class="mb-4 d-flex gap-2">
      <input type="text" name="title" class="form-control" placeholder="Todo title" required />
      <select name="status" class="form-select">
        <option value="to-do" selected>To-Do</option>
        <option value="in progress">In Progress</option>
        <option value="done">Done</option>
      </select>
      <button type="submit" class="btn btn-primary">Add Todo</button>
    </form>

    <!-- Todos Table -->
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="todosList">
        <% todos.forEach((todo, i) => { %>
          <tr data-id="<%= todo._id %>">
            <td><%= i + 1 %></td>
            <td><%= todo.title %></td>
            <td><%= todo.status %></td>
            <td>
              <button class="btn btn-danger btn-sm deleteBtn">Delete</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <script>
    const token = localStorage.getItem('token'); 
    const form = document.getElementById('todoForm');
    const todosList = document.getElementById('todosList');

    // Add Todo
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const data = Object.fromEntries(new FormData(form).entries());

      const res = await fetch('/todos', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': 'Bearer ' + token
        },
        body: JSON.stringify(data)
      });

      const result = await res.json();
      if(res.ok) location.reload(); 
      else alert(result.message || "Failed to add todo");
    });

    // Delete Todo
    todosList.addEventListener('click', async (e) => {
      if(e.target.classList.contains('deleteBtn')){
        const tr = e.target.closest('tr');
        const id = tr.dataset.id;

        const res = await fetch('/todos/' + id, {
          method: 'DELETE',
          headers: { 'Authorization': 'Bearer ' + token }
        });

        if(res.ok) tr.remove();
        else {
          const result = await res.json();
          alert(result.message || "Failed to delete todo");
        }
      }
    });
  </script>
</body>
</html>
