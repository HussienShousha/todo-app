<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Todos Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <style>
    body {
      background-color: #f8f9fa;
    }

    .status-to-do {
      background-color: #ffc107;
      color: black;
    }

    .status-in-progress {
      background-color: #0dcaf0;
      color: black;
    }

    .status-done {
      background-color: #198754;
      color: white;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h2 class="text-center mb-4">Todos Dashboard</h2>

 
    <form id="todoForm" class="mb-4 d-flex gap-2">
      <input type="text" name="title" class="form-control" placeholder="Todo title" required />
      <input type="text" name="description" class="form-control" placeholder="Description" />
      <button type="submit" class="btn btn-primary">Add Todo</button>
    </form>


    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Description</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody id="todosList">
        <% todos.forEach((todo, i) => { %>
          <tr data-id="<%= todo._id %>">
            <td><%= i + 1 %></td>
            <td><%= todo.title %></td>
            <td><%= todo.description %></td>
            <td>
              <select class="statusDropdown form-select <%= 'status-' + todo.status.replace(' ', '-') %>">
                <option value="to-do" <%= todo.status === 'to-do' ? 'selected' : '' %>>To-Do</option>
                <option value="in progress" <%= todo.status === 'in progress' ? 'selected' : '' %>>In Progress</option>
                <option value="done" <%= todo.status === 'done' ? 'selected' : '' %>>Done</option>
              </select>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <script>
    const token = localStorage.getItem('token'); 
    const form = document.getElementById('todoForm');
    const todosList = document.getElementById('todosList');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const data = Object.fromEntries(new FormData(form).entries());

      const res = await fetch('/todos', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': 'Bearer ' + token
        },
        body: JSON.stringify(data)
      });

      const result = await res.json();
      if(res.ok) location.reload(); 
      else alert(result.message || "Failed to add todo");
    });

    todosList.addEventListener('change', async (e) => {
      if (e.target.classList.contains('statusDropdown')) {
        const tr = e.target.closest('tr');
        const id = tr.dataset.id;
        const status = e.target.value;

        const res = await fetch('/todos/' + id, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': 'Bearer ' + token
          },
          body: JSON.stringify({ status })
        });

        if (!res.ok) {
          const result = await res.json();
          alert(result.message || "Failed to update status");
        } else {
          e.target.className = 'statusDropdown form-select status-' + status.replace(' ', '-');
        }
      }
    });
  </script>
</body>
</html>
