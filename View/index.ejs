<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../Static/style.css" />

    <title>All users</title>
  </head>

  <body class="px-4 py-3">
    <div class="row border border-black p-2 gap-2 rounded-2">
      <form
        action="/users"
        method="POST"
        class="col py-3 border border-black rounded-2"
      >
        <div class="mb-3">
          <input
            placeholder="Username"
            type="text"
            class="form-control"
            id="username"
            name="username"
            required
          />
        </div>
        <div class="row">
          <div class="col mb-3">
            <input
              placeholder="Email"
              type="text"
              class="form-control"
              id="email"
              name="email"
              required
            />
          </div>
          <div class="col mb-3">
            <input
              placeholder="Password"
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            />
          </div>
        </div>

        <div class="row">
          <div class="col mb-3">
            <input
              placeholder="First name"
              type="text"
              class="form-control"
              id="firstName"
              name="firstName"
              required
            />
          </div>
          <div class="col mb-3">
            <input
              placeholder="Last name"
              type="text"
              class="form-control"
              id="lastName"
              name="lastName"
              required
            />
          </div>
        </div>
        <div class="mb-3">
          <input
            placeholder="Date of Birth"
            type="date"
            class="form-control"
            id="dob"
            name="dob"
          />
        </div>
        <div class="d-flex mb-3">
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="role"
              id="radio1"
              value="user"
              checked
            />
            <label class="form-check-label me-3" for="radio1">User</label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="role"
              id="radio2"
              value="admin"
            />
            <label class="form-check-label" for="radio2">Admin</label>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

      <div class="col py-3 border border-black rounded-2 overflow-auto">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">controls</th>
              <th scope="col">#</th>
              <th scope="col">First</th>
              <th scope="col">Last</th>
              <th scope="col">Email</th>
              <th scope="col">Role</th>
            </tr>
          </thead>
          <div class="user">
            <tbody class="table-group-divider">
              <% let i = 1; %> <% users.forEach(user => { %>
              <tr>
                <th scope="row">
                  <div class="d-flex gap-1">
                    <form 
                      action="/users/edit/<%= user.id %>" 
                      method="get"
                    >
                      <button class="btn btn-sm btn-warning">Edit</button>
                    </form>
                    
                    <form
                      action="/users/<%= user.id %>?_method=DELETE"
                      method="post"
                    >
                      <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                  </div>
                </th>
                <th scope="row"><%= i++ %></th>
                <td><%= user.firstName %></td>
                <td><%= user.lastName %></td>
                <td><%= user.email %></td>
                <td><%= user.role %></td>
              </tr>
              <% }) %>
            </tbody>
          </div>
        </table>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"
    ></script>
    <script src="../Static/script.js"></script>
  </body>
</html>
